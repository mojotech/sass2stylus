.share
  margin med-padding-block 0

.social-network-link
  &.mt-share-inline-square-sm
    display inline-block
    width 42px
    text-align center
    img
      width 34px
      height auto
      border 0px

.mt-google
  background-color rgb(221, 75, 57)
  &:hover
    background-color rgb(225, 95, 79)

.mt-linkedin
  background-color rgb(14, 118, 168)
  &:hover
    background-color rgb(16, 135, 192)

.mt-twitter
  background-color rgb(0, 172, 238)
  &:hover
    background-color rgb(8, 187, 255)

.mt-facebook
  background-color rgb(59, 89, 152)
  &:hover
    background-color rgb(66, 100, 170)

.mt-pinterest
  background-color rgb(204, 33, 39)
  &:hover
    background-color rgb(221, 42, 48)

