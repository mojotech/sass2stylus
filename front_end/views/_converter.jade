
.col-half.sass-col.converter-col
    h2.col-header SASS
    .action-buttons
      input#file_selector(type='file')
      button#upload.btn.btn-stretch-row Upload
      button#convert.btn.btn-stretch-row Convert
    .inner-padding
      form#form.sass-code.cf(method='post', action='/ajax')
        textarea#codemirror_sass(name='sass_textarea')
          |# write your SASS here
          |# or upload
  
.col-half.styl-col.converter-col
  h2.col-header STYL
  .action-buttons
    button#download_btn.btn-stretch-row.btn.inactive.download.conditional(disabled='disabled').
      Download
    button#copy_btn.btn.btn-stretch-row.inactive.copy.conditional.flash_btn(disabled='disabled').
      Copy
  .inner-padding
    form#download_form.styl-code.cf(method='post', action='download')
      textarea#codemirror_stylus(name='stylus_textarea')
        |// your code will be here!
