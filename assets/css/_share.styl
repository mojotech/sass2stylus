.share
  pos(fixed, 303px, false, false, 10px)
  border-radius 6px
  background rgba(255,255,255,0.5)
  padding 0 small-padding-block
.social-network-link
  &.mt-share-inline-square-sm
    display block
    width 34px
    height 34px
    border-top-left-radius 2px
    border-top-right-radius 2px
    border-bottom-right-radius 2px
    border-bottom-left-radius 2px
    margin-bottom small-padding-block
    img
      width 34px
      height auto
      border 0px

.mt-google
  background-color rgb(221, 75, 57)
  &:hover
    background-color rgb(225, 95, 79)

.mt-linkedin
  background-color rgb(14, 118, 168)
  &:hover
    background-color rgb(16, 135, 192)

.mt-twitter
  background-color rgb(0, 172, 238)
  &:hover
    background-color rgb(8, 187, 255)

.mt-facebook
  margin-top small-padding-block
  background-color rgb(59, 89, 152)
  &:hover
    background-color rgb(66, 100, 170)

.mt-pinterest
  background-color rgb(204, 33, 39)
  &:hover
    background-color rgb(221, 42, 48)

